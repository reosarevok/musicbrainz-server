<table class="tbl">
  <thead>
    <tr>
      [% IF c.user_exists AND !no_prefix %]
      <th>
        <input type="checkbox" />
      </th>
      [% END %]
      <th>[% l('Work') %]</th>
      <th>[% l('Writers') %]</th>
      <th>[% l('Artists') %]</th>
      <th>[% l('ISWC') %]</th>
      <th>[% l('Type') %]</th>
      <th>[% l('Language') %]</th>
      [% UNLESS no_ratings %]
      <th>[% l('Rating') %]</th>
      [% END %]
    </tr>
  </thead>
  <tbody>
    [% FOR work IN works %]
    <tr class="[% loop.index % 2 == 0 ? 'ev' : 'odd' %]">
      [% IF c.user_exists AND !no_prefix %]
      <td>
        <input type="checkbox" name="add-to-merge"
               value="[% work.id %]" />
      </td>
      [% END %]
      <td>
        [% descriptive_link(work) %]
      </td>
      <td>
        <ul>
          [% FOR rel_artist=work.writers %]
            <li>
              [% l('{artist} ({roles})', { artist => link_artist(rel_artist.entity),
                   roles  => rel_artist.roles.join(', ') }) %]
            </li>
          [% END %]
        </ul>
      </td>
      <td>
        <ul>
          [% FOR rel_artist=work.artists %]
            <li>[% artist_credit(rel_artist) %]</li>
          [% END %]
        </ul>
      </td>
      <td class="iswc">
        <ul>
          [% FOR iswc=work.iswcs %]
            <li>[% rdfa_work_iswc(work, iswc) %]</li>
          [% END %]
        </ul>
      </td>
      <td>
        [% l(work.type.name) %]
      </td>
      <td>
        [% l(work.language.iso_code_3) %]
      </td>
      [% UNLESS no_ratings %]
      <td>[% rating_stars(work) %]</td>
      [% END %]
    </tr>
    [% END %]
  </tbody>
</table>

[%- WRAPPER 'components/with-pager.tt' -%]
<table class="tbl">
    <thead>
        <tr>
            <th>[% l('Artist') %]</th>
            <th>[% l('Release Group') %]</th>
        </tr>
    </thead>
    <tbody>
        [%- FOR item IN items -%]
        <tr[% ' class="ev"' IF loop.count % 2 == 0 %]>
            <td>[% artist_credit(item.artist_credit) %]</td>
            <td>[% link_entity(item.release_group) %]</td>
        </tr>
        [%- END -%]
    </tbody>
</table>
[%- END -%]
